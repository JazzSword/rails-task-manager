<%= form_for task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', style: 'margin-bottom: 10px;' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control', style: 'margin-bottom: 10px;' %>
  </div>

  <% if controller.action_name == 'edit' %>
    <div class="form-group">
      <%= f.label :completed, style: 'margin-bottom: 10px;' do %>
        <%= f.check_box :completed %>
        Completed
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>

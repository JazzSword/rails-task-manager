<%= form_for @task do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', style: 'margin-bottom: 10px;' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control', style: 'margin-bottom: 10px;' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Create Task', class: 'btn btn-primary' %>
  </div>
<% end %>

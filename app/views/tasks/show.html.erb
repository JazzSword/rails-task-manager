<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed? ? 'This task is completed' : 'This task is not completed yet' %></p>
<%= link_to 'Back to list', tasks_path, class: 'action-btn' %>
<%= link_to 'Edit Task', edit_task_path, class: 'action-btn' %>
<%= link_to "Delete Task",
 		 destroy_task_path(@task), class: 'action-btn',
 		 data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
